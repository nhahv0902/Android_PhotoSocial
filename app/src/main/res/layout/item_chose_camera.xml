<?xml version="1.0" encoding="utf-8"?>
<com.nccsoft.photosocial.views.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_grey"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_camera_alt_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_camera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_8"
        android:text="@string/take_camera"
        android:textColor="@color/white" />
</com.nccsoft.photosocial.views.SquareRelativeLayout>